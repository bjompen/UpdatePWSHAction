{
    "manifestVersion": 1,
    "id": "PWSHUpdaterNix",
    "name": "PowerShell Updater for Linux and MacOS runners",
    "version": "0.0.2",
    "publisher": "Bjompen",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Updates or installs a specific release of PowerShell. This task will only run on Linux and MacOS build hosts.",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "icon.png"
    },
    "links": {
        "support": {
            "uri": "https://github.com/bjompen/UpdatePWSHAction/issues"
        }
    },
    "files": [
        {
            "path": "PWSHUpdaterNix"
        },
        {
            "path": "UpgradePwsh.ps1", "packagePath": "/PWSHUpdaterNix/UpgradePwsh.ps1"
        }
    ],
    "contributions": [
        {
            "id": "PWSHUpdater",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "PWSHUpdaterNix"
            }
        }
    ]
}